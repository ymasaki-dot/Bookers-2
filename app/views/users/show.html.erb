<!--ユーザー詳細-->
<div class=container>
 <div class="row">
  <div class="col-lg-4">
   <div class="user-info">
    <%= render 'users/info', user: @user %>
   </div>
    <div class="new-book">
      <%= render 'books/form', book: @book %>
   </div>
  </div>
   <div class="col-lg-8">
   <div class="books">
   <h1>Books</h1>
   <table class="table">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
     <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
     </tr>
     <% end %>
     </tbody>
    </table>
     </div>
   </div>
  </div>
</div>

