<!--ユーザー一覧画面-->
<div class="user-info">
<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg"%>
<p><%= link_to "profile Edit", edit_user_path(@user) %></p>
</div>

<div class="new-book">
  <h1>New book</h1>
    <%= form_with model:@book, local: true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>


<h1>Users</h1>
<% @users.each do |user| %>
  <p>image</p>
  <%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
  <p>name</p>
  <%= user.name %> <%= link_to "Show", user_path(user.id) %>
<% end %>


