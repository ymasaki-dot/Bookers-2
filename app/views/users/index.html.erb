<!--ユーザー一覧画面-->
<div class=container>
  <div class="row">
    <div class="col-lg-4">
      <div class="user-info">
        <%= render 'users/info', user: @user %>
        </div>
        <div class="new-book">
          <%= render 'books/form', book: @book %>
        </div>
      </div>
      <div class="col-lg-8">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></td>
              <td><%= user.name %> </td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            <% end %>
            </tr>
            </tbody>
        </table>
      </div>
    </div>
  </div>

