  <div class="mt-3">
  <h2>New book</h2>
  </div>
  <%= form_with model:book, local: true do |f| %>
    <span>Title</span>
    <div class="form_group  pt-2 pb-3">
      <%= f.text_field :title, size:"85"%>
    </div>
    <span>Opinion</span>
    <div class="form_group pt-2 pb-3" >
      <%= f.text_area :body, size:"85" %>
    </div>
    <div class="mb-3">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
  <% end %>
